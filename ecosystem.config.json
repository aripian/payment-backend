{
  "apps": [
    {
      "name": "store-api",
      "script": "./dist/index.js",
      "instances": "max",
      "exec_mode": "cluster_mode",
      "env_production": {
        "NODE_ENV": "production",
        "PORT": 5005
      }
    }
  ],
  "deploy": {
    "production" : {
      "user" : "axa1",
      "host" : [" 192.168.3.11"],
      "port" : "8325",
      "ref"  : "origin/master",
      "repo" : "git@bitbucket.org:axamy-dev/backend-store-info.git",
      "path" : "/home/axa1/api/store",
      "pre-deploy" : "git fetch --all",
      "post-deploy" : "cd /home/axa1/api/store/current && git checkout master && npm install && npm update && npm run build && pm2 startOrGracefulReload ecosystem.config.json --env production",
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}
